<section>
	
	<h1>Sign in:</h1>
	
	<%= form_tag "/auth/identity/callback" do %>
	  <div class="field">
	    <%= label_tag :auth_key, "Email" %><br>
	    <%= text_field_tag :auth_key %>
	  </div>
	  <div class="field">
	    <%= label_tag :password, "Password" %><br>
	    <%= password_field_tag :password %>
	  </div>
	  <div class="actions"><%= submit_tag "Sign In" %></div>
	<% end %>
	
	<div>No account? <%= link_to "register here", "/auth/identity/register" %></div>

</section>