<h1>Listing books</h1>

<table id="books">
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Abstract</th>
    <th>Publish date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.author %></td>
    <td><%= book.abstract %></td>
    <td><%= book.publish_date %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, id: "d#{book.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

